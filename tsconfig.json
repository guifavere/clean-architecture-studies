{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "@types/jest"],
    "typeRoots" : ["./node_modules/@types"],
    "strictPropertyInitialization": false,
    "baseUrl": "src",
    "paths": {
      "@adapter/*": ["adapter/*"],
      "@app/*": ["app/*"],
      "@core/*": ["core/*"],
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude" : [
    "src/**/*.spec.ts"
  ]
}